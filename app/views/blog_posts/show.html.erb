<div class="content-main blog-post">
  <p id="notice"><%= notice %></p>

  <h3 class="date right">
    <%= prettydate(@blog_post.created_at) %>
  </h3>
  
  <h1 class="title">
    <%= @blog_post.title %>
  </h1>

  <div class="content">
    <%= markdown(@blog_post.content) %>
  </div>

  <%= link_to 'Edit', edit_blog_post_path(@blog_post) %> |
  <%= link_to 'Back', blog_posts_path %>
</div>
