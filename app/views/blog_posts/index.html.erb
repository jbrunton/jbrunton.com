<div class="content-full">
  <% @blog_posts.reverse.each do |blog_post| %>
    <div class="blog-post">
      <h3 class="date right">
        <%= prettydate(blog_post.created_at) %>
      </h3>
      <h1 class="title">
        <%= link_to blog_post.title, blog_post %>
      </h1>
      <div class="content">
        <%= preview(markdown(blog_post.content)) %>
      </div>
      <p>
        <%= link_to 'Continue Reading &rarr;'.html_safe, blog_post %>
      </p>
    </div>
  <% end %>  
</div>


<%= link_to 'New Blog post', new_blog_post_path %>
