<div class="content-full">
  <% @blog_posts.each do |blog_post| %>
    <div class="blog-post">
      <h4 class="date right">
        <%= prettydate(blog_post.created_at) %>
      </h4>
      <h2 class="title">
        <%= link_to blog_post.title, blog_post %>
      </h2>
      <div class="content">
        <%= markdown(blog_post.content) %>
      </div>
    </div>
  <% end %>  
</div>


<%= link_to 'New Blog post', new_blog_post_path %>
