<%= form_for(@page) do |f| %>
  <% if @page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
      <% @page.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>
  <div class="actions">
    <% if @page.new_record? %>
      <%= f.submit 'Create', :class => 'small radius action button' %>
    <% else %>
      <%= link_to 'Cancel', @page, :class => 'small radius cancel button' %>
      <%= f.submit 'Save', :class => 'small radius button' %>
    <% end %>
  </div>
<% end %>
